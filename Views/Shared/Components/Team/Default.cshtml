@model IEnumerable<Team>

    <a asp-action="Index" asp-controller="Home" asp-route-teamid="">Home</a>

    @foreach (var x in Model)
    {       
        <!--button setting-->
        <a class="btn btn-block
         @(x.TeamName == ViewBag.SelectedTeam
         ? "btn-primary": "btn-outline-secondary")" asp-action="Index" asp-controller="Home"
           asp-route-teamid="@x.TeamId"
           asp-route-teamname="@x.TeamName">
            @x.TeamName
        </a>
    }

   
